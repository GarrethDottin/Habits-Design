<!-- start nav bar -->
<header>
	<nav class="navbar main-navbar">
		<div class="container-fluid">
			<div class="main-nav">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					{{#if @blog.logo}}
					<a class="logo image-logo navbar-brand" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
					{{else}}
					<a class="logo navbar-brand" href="{{@blog.url}}">{{@blog.title}}</a>
					{{/if}}
				</div>
				<form action="#" class="search-form pull-right">
					<div class="form-group">
						<input type="text" id="search-field" placeholder="Search this site" class="form-control">
						<button class="search-button" id="search-submit"><i class="fa fa-search"></i></button>
					</div>
				</form>
				<div id="search-result"></div>
				<div id="navbar" class="navbar-collapse collapse">
					{{navigation}}
				</div>
			</div>
		</div>
	</nav>
</header>
<!-- end nav bar -->