{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<!-- start site body area -->
<section class="man-content-wrap">
	<div class="container-fluid">
        <div class="row">
        	<!-- start post area -->
            <div class="col-md-8 post-area-wrap page">
            	<div class="post-area-wrap-inner">
                {{#post}}
                <!-- start article -->
                <article class="single-post-wrap">
                	<header class="post-header">
                		<h2 class="title">{{{title}}}</h2>
                	</header>
                    {{#if image}}
                	<div class="featured-media">
                			<img src="{{image}}" alt="{{{title}}}">
                	</div>
                    {{/if}}
                	<div class="post-entry">
                		{{content}}
                	</div>
                </article>
                <!-- end article -->
                {{/post}}
                </div>
            </div>
        	<!-- end post area -->
        	{{> sidebar}}
        </div>
    </div>
</section>
<!-- end site body area -->